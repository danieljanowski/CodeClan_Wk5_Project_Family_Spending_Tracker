
<form action="/users" method="post">

  <label for="first_name">First Name:</label>
  <input type="text" name="first_name" id="first-name-field" /><hr>

  <label for="last_name">Last Name:</label>
  <input type="text" name="last_name" id="last-name-field"/><hr>

  <label for="username">Preffered display name:</label>
  <input type="text" name="username" id="username-field"/><hr>

  <label for="balance">Starting balance:</label>
  <input type="number" name="balance" id="balance-field" min="0" step="0.01"/>

  <hr>

  <input type="submit" value="Save"> </input>

</form>
